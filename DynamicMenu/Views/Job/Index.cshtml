
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<h2>Index</h2>
<form method="post">
    <div class="row">
        <div class="col-sm-6">
            <div class="form-group">
                <div class="col-sm-9">
                    <select class="form-control" name="noAduan">
                        @foreach (DynamicMenu.Models.JobDistribution jd in ViewBag.Dropdown)
                        {
                            <option value="@jd.NoAduan">@jd.NoAduan</option>
                        }
                    </select>
                </div>
                <div class="col-sm-3">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>
            </div>
        </div>
        <div class="col-sm-6">

        </div>
    </div>
</form>
